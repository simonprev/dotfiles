[user]
  name = Simon Pr√©vost
  email = sprevost@mirego.com
[alias]
  ci = commit
  co = checkout
  st  = status -sb
  br = branch -v
  rollback = reset --soft HEAD~1
  verbs = !git log --pretty=format:'%s' | cut -d \" \" -f 1 | sort | uniq -c | sort -nr
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "branch"]
  current = green bold
  local = green
  remote = red bold
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red
[color "sh"]
  branch = yellow
[push]
  default = current
[branch]
  autosetuprebase = always
[pull]
  rebase = true
[diff]
  renames = copies
  mnemonicprefix = true
  tool = gvimdiff
[difftool]
  prompt = false
[difftool "gvimdiff"]
  path = nvim
[core]
  excludesfile = /Users/simonprevost/.gitignore_global
  pager = diff-so-fancy | less --tabs=1,5 -RX
  editor = nvim
[advice]
  statusHints = false
[help]
  autocorrect = 1
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
